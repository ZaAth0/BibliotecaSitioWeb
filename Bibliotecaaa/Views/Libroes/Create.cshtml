@model Bibliotecaaa.Models.Libro

@{
    ViewData["Title"] = "Crear Libro";
}

<h1>Crear Libro</h1>

<h4>Libro</h4>
<hr />

<!-- Formulario principal -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Titulo" class="control-label">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Genero" class="control-label">Género</label>
        <select asp-for="Genero" class="form-control">
            <option value="">Seleccione un género</option>
            @foreach (var genero in ViewBag.Generos as SelectList)
            {
                <option value="@genero.Value">@genero.Text</option>
            }
        </select>
        <span asp-validation-for="Genero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="AutorNombre" class="control-label">Autor</label>
        <input asp-for="AutorNombre" class="form-control" placeholder="Escriba el nombre del autor" />
        <span asp-validation-for="AutorNombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Descripcion" class="control-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Portada" class="control-label">URL de la portada</label>
        <input asp-for="Portada" class="form-control" placeholder="Ingrese la URL de la portada" />
        <span asp-validation-for="Portada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="FechaPublicacion" class="control-label">Fecha de publicación</label>
        <input asp-for="FechaPublicacion" class="form-control" type="date" />
        <span asp-validation-for="FechaPublicacion" class="text-danger"></span>
    </div>


  <!--  <div class="form-group">
        <label for="Disponible" class="control-label">Disponible</label>
        <input asp-for="Disponible" type="checkbox" />
        <span asp-validation-for="Disponible" class="text-danger"></span>
    </div>-->

   <!-- <div class="form-group">
        <label for="FechaAgregado" class="control-label">Fecha de agregado</label>
        <input asp-for="FechaAgregado" class="form-control" />
        <span asp-validation-for="FechaAgregado" class="text-danger"></span>
    </div>-->

    <!-- Botón de Guardar -->
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index", "Libroes")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
