@model Bibliotecaaa.Models.Libro

@{
    ViewData["Title"] = "Detalles del Libro";
}

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Autor</dt>
    <dd class="col-sm-10">@Model.AutorNavigation?.AutorNombre</dd>

    <dt class="col-sm-2">Género</dt>
    <dd class="col-sm-10">@Model.GeneroNavigation?.nombre</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>

    <dt class="col-sm-2">Portada</dt>
    <dd class="col-sm-10">
        @if (!string.IsNullOrEmpty(Model?.Portada))
        {
            <img src="@Model.Portada" alt="Portada del libro" style="width: 150px; height: 200px;" />
        }
        else
        {
            <span>No disponible</span>
        }
    </dd>

    <dt class="col-sm-2">Fecha de Publicación</dt>
    <dd class="col-sm-10">@Model.FechaPublicacion?.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Disponible</dt>
    <dd class="col-sm-10">@Model.Disponible ? "Sí" : "No"</dd>

    <dt class="col-sm-2">Fecha Agregado</dt>
    <dd class="col-sm-10">@Model.FechaAgregado?.ToString("dd/MM/yyyy")</dd>
</dl>

<div class="mt-3">
    <a class="btn btn-primary" href="@Url.Action("Edit", "Libroes", new { id = Model.IdLibro })">Editar</a>
    <a class="btn btn-danger" href="@Url.Action("Delete", "Libroes", new { id = Model.IdLibro })">Eliminar</a>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Libroes")">Volver a la lista</a>
</div>
