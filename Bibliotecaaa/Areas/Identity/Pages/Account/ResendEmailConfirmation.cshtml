@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar confirmación de correo electrónico.";
}

<div class="row resend-email-page">
    <div class="col-md-12">
        <div class="card-container">
            <h1>@ViewData["Title"]</h1>
            <h2>Ingresa tu correo electrónico para reenviar el enlace de confirmación.</h2>
            <hr />
            <div class="form-container">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
